@model ScheduleTestFrontend.Models.Schedule

@{
    ViewData["Title"] = "Thêm Lịch Học";
}

<h2>Thêm Lịch Học</h2>

<form asp-action="Insert" method="post">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <input type="hidden" asp-for="SubjectName" value="Lap Trinh" />
    <div class="form-group">
        <label asp-for="SubjectId" class="control-label">Môn Học</label>
        <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects">
            <option value="">-- Chọn Môn Học --</option>
        </select>
        <span asp-validation-for="SubjectId" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="DayOfWeek" class="control-label">Thứ Trong Tuần</label>
        <select asp-for="DayOfWeek" class="form-control" asp-items="Html.GetEnumSelectList<ScheduleTestFrontend.Models.Enum.WeekDay>()">
            <option value="">-- Chọn Thứ --</option>
        </select>
        <span asp-validation-for="DayOfWeek" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartTime" class="control-label">Giờ Bắt Đầu</label>
        <input asp-for="StartTime" type="time" class="form-control" step="1" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndTime" class="control-label">Giờ Kết Thúc</label>
        <input asp-for="EndTime" type="time" class="form-control" step="1" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Thêm</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
