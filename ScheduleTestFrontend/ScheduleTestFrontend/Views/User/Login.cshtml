@model ScheduleTestFrontend.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<style>
    body {
        font-family: Arial, sans-serif;
    }

    .container {
        width: 300px;
        margin: 50px auto;
        text-align: center;
    }

    input {
        width: 100%;
        padding: 8px;
        margin: 5px 0;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .error {
        color: red;
        font-size: 14px;
    }

    button {
        width: 100%;
        padding: 10px;
        border: none;
        cursor: pointer;
    }

    .btn-login {
        background: #007bff;
        color: #fff;
    }

        .btn-login:hover {
            background: #0056b3;
        }

    .btn-signup {
        background: #28a745;
        color: #fff;
        margin-top: 10px;
    }

        .btn-signup:hover {
            background: #218838;
        }

    a {
        display: block;
        margin-top: 10px;
        text-decoration: none;
        color: #007bff;
    }
</style>

<div class="container">
    <h2>Đăng nhập</h2>

    <form asp-action="Login">
        <input asp-for="Email" placeholder="Email" />
        <span asp-validation-for="Email" class="error"></span>

        <input asp-for="Password" type="password" placeholder="Password" />
        <span asp-validation-for="Password" class="error"></span>

        <p class="error">@ViewBag.Error</p>

        <button type="submit" class="btn-login">Đăng nhập</button>

        <button type="button" class="btn-signup" onclick="location.href='@Url.Action("Register", "User")'">
            Đăng ký
        </button>
    </form>
</div>

